{% extends 'base.html.twig' %}

{% block body %}
    {# Section Hero #}
    <section class="section section-gray">
        <div class="container grid grid-cols-2 gap-12">
            <div class="flex flex-col justify-center">
                <h1 class="title">Découvrez notre passion du simracing</h1>
                <p class="text">
                    Une discipline qui recréé, de manière réaliste, l'expérience des courses automobiles. 
                    Nos services de pointe et nos technologies avancées vous plongent dans l'univers d'un pilote, 
                    une immersion totale dans le monde de la course automobile.
                </p>
                <div>
                    <a href="#" class="btn btn-primary">En savoir plus</a>
                </div>
            </div>
            <div class="image-container">
                <img src="{{ asset('images/hero-simracing.jpg') }}" 
                     alt="Pilote Simracing" 
                     class="hero-image">
            </div>
        </div>
    </section>

    {# Section LMP #}
    <section class="section">
        <div class="container grid grid-cols-2 gap-12">
            <div class="image-container">
                <img src="{{ asset('images/lmp-dashboard.jpg') }}" 
                     alt="LMP Dashboard" 
                     class="feature-image">
            </div>
            <div class="flex flex-col justify-center">
                <h2 class="title">Le LMP est de Retour</h2>
                <p class="text">
                    Un volant de simulation de course Hypercar avec retour de force direct. 
                    Le système de changement de site et manettes et le shift d'horloge est de retour, 
                    avec des améliorations notables nécessaires, une intégration plus poussée 
                    et des fonctions de changement de vitesse améliorées.
                </p>
                <a href="#" class="link-arrow">En savoir plus →</a>
            </div>
        </div>
    </section>

    {# Section Services #}
    <section class="section section-gray">
        <div class="container">
            <h2 class="title text-center mb-12">Nos services</h2>
            <div class="grid grid-cols-3 gap-8">
                {% for service in services %}
                    <div class="card">
                        <img src="{{ asset(service.image) }}" 
                             alt="{{ service.title }}" 
                             class="card-image"
                             loading="lazy">
                        <div class="card-content">
                            <h3 class="card-title">{{ service.title }}</h3>
                            <p class="card-text">{{ service.description }}</p>
                            <a href="#" class="btn btn-primary">{{ service.button }}</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# Section Localisation #}
    <section class="section">
        <div class="container">
            <h2 class="title text-center">Localisation</h2>
            <div class="map-container">
                <iframe 
                    src="https://www.google.com/maps/embed?pb=..." 
                    width="100%" 
                    height="450" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy">
                </iframe>
            </div>
            
            {# Avis clients #}
            <div class="grid grid-cols-3 mt-8">
                <div class="card">
                    <div class="card-content">
                        <h3 class="card-title">Avis 1</h3>
                        <p class="card-text">Excellent service, très professionnel...</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-content">
                        <h3 class="card-title">Avis 2</h3>
                        <p class="card-text">Une expérience incroyable...</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-content">
                        <h3 class="card-title">Avis 3</h3>
                        <p class="card-text">Je recommande vivement...</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %} 