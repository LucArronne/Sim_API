{% extends 'base.html.twig' %}

{% block title %}DIY Parts - LUCAR Simracing{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- En-tête avec image de bannière -->
    <div class="banner mb-4">
        <img src="{{ asset('images/Pilote Simracing.jpg') }}" alt="Simracing banner" class="w-100">
    </div>

    <!-- Titre de la section -->
    <h1 class="text-center mb-5">DIY Parts</h1>

    <!-- Grille des produits -->
    <div class="row">
        <!-- Volant Rallye -->
        <div class="col-md-4 mb-4">
            <div class="card product-card">
                <img src="{{ asset('images/Volant rallye.jpg') }}" class="card-img-top" alt="Volant Rallye">
                <div class="card-body">
                    <h5 class="card-title">Volant Rallye</h5>
                    <p class="card-text">Volant personnalisé avec boutons programmables et palettes de changement de vitesse.</p>
                    <button class="btn btn-primary valider-btn">Valider</button>
                </div>
            </div>
        </div>

        <!-- Button Box -->
        <div class="col-md-4 mb-4">
            <div class="card product-card">
                <img src="{{ asset('images/button box.jpg') }}" class="card-img-top" alt="Button Box">
                <div class="card-body">
                    <h5 class="card-title">Button Box</h5>
                    <p class="card-text">Boîtier de commandes personnalisé avec boutons et interrupteurs configurables.</p>
                    <button class="btn btn-primary valider-btn">Valider</button>
                </div>
            </div>
        </div>

        <!-- LMP -->
        <div class="col-md-4 mb-4">
            <div class="card product-card">
                <img src="{{ asset('images/lmp.jpg') }}" class="card-img-top" alt="LMP">
                <div class="card-body">
                    <h5 class="card-title">LMP</h5>
                    <p class="card-text">Volant professionnel style LMP avec affichage intégré et commandes avancées.</p>
                    <button class="btn btn-primary valider-btn">Valider</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.banner {
    height: 400px;
    overflow: hidden;
    border-radius: 10px;
    margin-bottom: 40px;
}

.banner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.product-card {
    transition: transform 0.3s ease;
    border: none;
    border-radius: 10px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.1);
    margin-bottom: 30px;
    height: 100%;
}

.product-card:hover {
    transform: translateY(-5px);
}

.product-card img {
    height: 350px;
    object-fit: cover;
    border-radius: 10px 10px 0 0;
}

.card-body {
    padding: 1.5rem;
}

.card-title {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 1rem;
}

.valider-btn {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    background-color: #007bff;
    border: none;
    transition: all 0.3s ease;
}

.valider-btn:hover {
    background-color: #0056b3;
    transform: translateY(-2px);
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

.col-md-4 {
    margin-bottom: 30px;
}

.row {
    margin: 0 -15px 30px;
}
</style>
{% endblock %} 